<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
 <hibernate-mapping>
	 <!-- 建立类和表的映射 -->
	 <class name="com.naaisi.nursesite.patient.domain.Patient" table="Patient" >
	 	<!-- 建立类中的属性与表中的主键对应 -->
	 	<id name="ID" column="ID">
	 		<generator class="native"/>
	 	</id>
	 	
	 	<!-- 建立类中普通属性与表中的字段对应 -->
	 	<property name="NAME" column="NAME"  />
	 	<property name="SEX" column="SEX"  />
	 	<property name="AGE" column="AGE"  />
	 	<property name="WARD" column="WARD"  />
	 	<property name="BED" column="BED"  />
	 	<property name="DISEASE" column="DISEASE"  />
	 	<property name="DOCTOR" column="DOCTOR"  />
	 	<property name="NURSE" column="NURSE"  />
	 	<property name="DIET" column="DIET"  />
	 	<property name="IN_TIME" column="IN_TIME"  />
	 	<property name="OUT_TIME" column="OUT_TIME"  />
	 </class>
 </hibernate-mapping>